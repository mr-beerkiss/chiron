{
  "name": "chrion",
  "version": "0.0.1",
  "description": "A chat bot, written from the ground up",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint src",
    "lint": "yarn run lint:js",
    "test": "nyc _mocha \"src/**/*.test.js\"",
    "coverage": "nyc report --reporter=text --reporter-text-summary --reporter=html",
    "dev": "nodemon src/index.js",
    "build": "babel src --out-dir lib",
    "start": "node lib"
  },
  "engines": {
    "node": ">= 7.0.0"
  },
  "nyc": {
    "reporter": "text-summary",
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules/**/",
      "src/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "all": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "standard": "^9.0.2"
  },
  "dependencies": {
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.1.0",
    "koa-router": "next"
  }
}
